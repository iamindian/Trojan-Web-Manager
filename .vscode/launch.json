{
  "version": "1.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest",
      "program": "${workspaceFolder}/packages/server/node_modules/jest/bin/jest",
      "args": [
        "--config",
        "${workspaceFolder}/packages/server/jest.config.js",
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules"
      ],
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    }
  ]
}